<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with Image and Gradient Overlay -->
        <RelativeLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dashboard" />

            <!-- Gradient Overlay for better text readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- Profile Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="45dp"
                android:layout_marginStart="14dp"
                android:gravity="center_vertical">

                <!-- Profile Image -->
                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_profile"
                    android:scaleType="centerCrop"
                    android:background="@drawable/circle_background"
                    android:contentDescription="Profile Image" />

                <!-- User Info -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="John Doe"
                        android:textColor="#FFFFFF"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:shadowColor="#000000" />

                    <TextView
                        android:id="@+id/deviceId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device ID: LINK2025"
                        android:textColor="#E0E0E0"
                        android:textSize="13sp"
                        android:layout_marginTop="4dp"
                        android:shadowColor="#000000" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <!-- Stats Cards Section -->
        <LinearLayout
            android:id="@+id/cardSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:layout_below="@id/headerContainer"
            android:layout_marginTop="-190dp">

            <!-- Family Members Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/modern_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person_found"
                        android:contentDescription="Family members icon"
                        app:tint="#3B82F6" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_trending_up"
                        android:contentDescription="Trend icon"
                        app:tint="#10B981" />
                </LinearLayout>

                <TextView
                    android:id="@+id/card1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Family Members"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card1Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Connected"
                    android:textSize="11sp"
                    android:textColor="#10B981"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- SOS Alert Count Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/modern_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_notifications"
                        android:contentDescription="SOS alert icon"
                        app:tint="#EF4444" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_trending_up"
                        android:contentDescription="Trend icon"
                        app:tint="#10B981" />
                </LinearLayout>

                <TextView
                    android:id="@+id/card2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SOS Alerts"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card2Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Times pressed"
                    android:textSize="11sp"
                    android:textColor="#6B7280"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional Stats Row -->
        <LinearLayout
            android:id="@+id/additionalStatsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:layout_below="@id/cardSection"
            android:layout_marginTop="8dp">

            <!-- Device Status Compact Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/accent_card_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_wifi"
                    android:contentDescription="WiFi icon"
                    app:tint="#4CAF50" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/deviceStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Online"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device Status"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </LinearLayout>

            <!-- Last Signal Compact Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/accent_card_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_timer"
                    android:contentDescription="Timer icon"
                    app:tint="#F59E0B" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:id="@+id/lastSignalTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2m"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Update"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Main Content Section -->
        <LinearLayout
            android:id="@+id/contentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_below="@id/additionalStatsSection"
            android:layout_marginTop="8dp">

            <!-- Last Known Location Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/modern_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_map_marker"
                        android:contentDescription="Location icon"
                        app:tint="#EF4444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Last Known Location"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="16dp" />



                <TextView
                    android:id="@+id/gpsCoordinates"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GPS: 14.5547°N, 121.0244°E"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/locationUpdateTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Updated: 2 minutes ago"
                    android:textColor="#6B7280"
                    android:textSize="13sp"
                    android:layout_marginBottom="16dp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/viewMapButton"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="VIEW ON MAP"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:background="@drawable/button_orange_bg"
                    android:backgroundTint="@null"
                    android:drawableStart="@drawable/ic_map_marker"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:elevation="3dp"
                    android:stateListAnimator="@null"
                    android:translationZ="0dp" />
            </LinearLayout>

            <!-- Quick Actions Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/modern_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_flash"
                        android:contentDescription="Quick actions icon"
                        app:tint="#EF4444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- Send SOS Button -->
                    <LinearLayout
                        android:id="@+id/sendSosButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/action_button_bg"
                        android:layout_marginEnd="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_notifications"
                            android:contentDescription="SOS icon"
                            app:tint="#EF4444" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Send SOS"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <!-- Share Location Button -->
                    <LinearLayout
                        android:id="@+id/shareLocationButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/action_button_bg"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_map"
                            android:contentDescription="Share location icon"
                            app:tint="#3B82F6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Share Location"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <!-- Power On Button -->
                    <LinearLayout
                        android:id="@+id/powerOnButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/action_button_bg"
                        android:layout_marginStart="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_power"
                            android:contentDescription="Power icon"
                            app:tint="#4CAF50" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Power On"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- Emergency Contacts Card -->
            <LinearLayout
                android:id="@+id/emergencyContactsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/team_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_phone"
                        android:contentDescription="Phone icon"
                        app:tint="#EF4444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Emergency Contacts"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="16dp" />

                <!-- Dynamic Contacts Container -->
                <LinearLayout
                    android:id="@+id/emergencyContactsContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <!-- Add Contact Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/addContactButton"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="+ Add Contact"
                    android:textColor="#EF4444"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.02"
                    android:background="@drawable/button_outlined_bg"
                    android:backgroundTint="@null"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:stateListAnimator="@null" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</ScrollView>
