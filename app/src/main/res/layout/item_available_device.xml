<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/deviceItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13dp"
        android:minHeight="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/chip_bg_elevated">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chip" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDeviceSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter__extrabold"
                android:text="TX-2026-001"
                android:textColor="@color/text_primary"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tvDeviceName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:text="Device Name"
                android:textColor="@color/gray_500"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/batteryIcon"
                    android:layout_width="12dp"
                    android:layout_height="16dp"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/ic_battery"
                    app:tint="@color/gray_500" />

                <TextView
                    android:id="@+id/tvBatteryPercent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_regular"
                    android:text="85%"
                    android:textColor="@color/gray_500"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAssign"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minHeight="48dp"
            android:background="@drawable/orange_rounded_button"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Assign"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_medium"
            android:letterSpacing="0.01"
            android:stateListAnimator="@null"
            android:elevation="0dp" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="16dp"
        android:background="@color/gray_200" />
</LinearLayout>
