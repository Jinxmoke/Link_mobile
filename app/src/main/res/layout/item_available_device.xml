<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/deviceItemLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="13dp"
        android:minHeight="72dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true">

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/chip_bg_elevated">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_chip" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDeviceSerial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TX-2026-001"
                android:textColor="#1a1a1a"
                android:textSize="13sp"
                android:fontFamily="@font/inter__extrabold" />

            <TextView
                android:id="@+id/tvDeviceStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active 1 day ago"
                android:textColor="#64748B"
                android:textSize="10sp"
                android:fontFamily="@font/inter_regular" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAssign"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:minHeight="48dp"
            android:background="@drawable/orange_rounded_button"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:text="Assign"
            android:textSize="10sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/inter_medium"
            android:letterSpacing="0.01"
            android:stateListAnimator="@null"
            android:elevation="0dp" />
    </LinearLayout>

    <!-- Divider -->
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="16dp"
        android:background="#E2E8F0" />
</LinearLayout>
