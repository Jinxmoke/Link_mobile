<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:id="@+id/bottomContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <com.example.link.CurvedBottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_alignParentBottom="true"
            android:elevation="16dp"
            />

        <!-- HOME -->
        <LinearLayout
            android:id="@+id/homeSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomNavigation"
            android:layout_alignParentStart="true"
            android:layout_marginStart="11dp"
            android:layout_marginBottom="-76dp"
            android:background="@drawable/nav_item_background"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:translationZ="18dp">

            <View
                android:id="@+id/homeIndicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/nav_indicator"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/homeIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Home"
                android:src="@drawable/ic_home"
                app:tint="@color/nav_icon_color" />

            <TextView
                android:id="@+id/homeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:text="Home"
                android:textColor="@color/nav_text_color"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- MAP -->

        <!-- NOTIFICATION -->
        <LinearLayout
            android:id="@+id/mapSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomNavigation"
            android:layout_marginStart="23dp"
            android:layout_marginBottom="-76dp"
            android:layout_toEndOf="@id/homeSection"
            android:background="@drawable/nav_item_background"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:translationZ="18dp">

            <View
                android:id="@+id/mapIndicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/nav_indicator"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/mapIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Map"
                android:src="@drawable/ic_map"
                app:tint="@color/nav_icon_color" />

            <TextView
                android:id="@+id/mapLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:text="Map"
                android:textColor="@color/nav_text_color"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/notificationSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomNavigation"
            android:layout_marginEnd="23dp"
            android:layout_marginBottom="-76dp"
            android:layout_toStartOf="@id/profileSection"
            android:background="@drawable/nav_item_background"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:translationZ="18dp">

            <View
                android:id="@+id/notificationIndicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/nav_indicator"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Notifications"
                android:src="@drawable/ic_notifications"
                app:tint="@color/nav_icon_color" />

            <TextView
                android:id="@+id/notificationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:text="Alerts"
                android:textColor="@color/nav_text_color"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- PROFILE -->
        <LinearLayout
            android:id="@+id/profileSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/bottomNavigation"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="-76dp"
            android:background="@drawable/nav_item_background"
            android:clickable="true"
            android:elevation="4dp"
            android:focusable="true"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingHorizontal="14dp"
            android:paddingTop="10dp"
            android:paddingBottom="16dp"
            android:translationZ="18dp">

            <View
                android:id="@+id/profileIndicator"
                android:layout_width="30dp"
                android:layout_height="3dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/nav_indicator"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/profileIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:contentDescription="Profile"
                android:src="@drawable/ic_person"
                app:tint="@color/nav_icon_color" />

            <TextView
                android:id="@+id/profileLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.01"
                android:text="Profile"
                android:textColor="@color/nav_text_color"
                android:textSize="11sp" />
        </LinearLayout>

    </RelativeLayout>

    <!-- CENTER BUTTON -->
    <FrameLayout
        android:id="@+id/centerButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/bottomContainer"
        android:layout_marginBottom="30dp"
        android:background="@drawable/circle_background"
        android:clickable="true"
        android:focusable="true"
        android:stateListAnimator="@animator/button_state_animator">

        <ImageView
            android:id="@+id/centerIcon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_power"
            android:contentDescription="QR Scanner"
            app:tint="@android:color/white" />
    </FrameLayout>

</RelativeLayout>
