<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:clickable="true"
    android:focusable="true">

    <!-- Scrollable container to ensure full visibility on small screens -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_centerInParent="true">

    <RelativeLayout
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/fragment_bg"
        android:elevation="16dp"
        android:padding="24dp"
        android:maxHeight="300dp"
        android:layout_centerInParent="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Title -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's verify your email"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"/>

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="We've sent a 4-digit code to your email.\nIt'll auto-verify once entered."
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:gravity="center"
                    android:layout_marginBottom="32dp"/>

                <!-- Code Input Fields -->
                <LinearLayout
                    android:id="@+id/llCodeInputs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <EditText
                        android:id="@+id/etCode1"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/code_input_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_margin="8dp"/>

                    <EditText
                        android:id="@+id/etCode2"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/code_input_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_margin="8dp"/>

                    <EditText
                        android:id="@+id/etCode3"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/code_input_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_margin="8dp"/>

                    <EditText
                        android:id="@+id/etCode4"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:background="@drawable/code_input_bg"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="24sp"
                        android:textColor="#000000"
                        android:layout_margin="8dp"/>

                </LinearLayout>

                <!-- Resend Section -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="26dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Didn't receive the code? "
                        android:textSize="14sp"
                        android:textColor="#666666"/>

                    <TextView
                        android:id="@+id/tvResend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resend"
                        android:textSize="14sp"
                        android:textColor="#007AFF"
                        android:textStyle="bold"
                        android:clickable="true"
                        android:focusable="true"/>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
