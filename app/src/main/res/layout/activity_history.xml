<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingTop="40dp"
        android:paddingBottom="16dp"
        android:elevation="2dp">

        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/back"
                app:tint="@color/gray_900" />
        </FrameLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Emergency History"
            android:textSize="18sp"
            android:textColor="@color/gray_900"
            android:fontFamily="@font/inter__extrabold"
            android:gravity="center"
            android:letterSpacing="-0.01" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />
    </LinearLayout>

    <!-- Count Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:paddingVertical="16dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Resolved SOS"
            android:textSize="14sp"
            android:textColor="@color/gray_500"
            android:fontFamily="@font/inter_medium" />

        <TextView
            android:id="@+id/tvCountBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="13sp"
            android:textColor="@color/orange_400"
            android:fontFamily="@font/inter__extrabold"
            android:background="@color/background_orange"
            android:paddingHorizontal="14dp"
            android:paddingVertical="6dp"
            android:minWidth="40dp"
            android:gravity="center" />
    </LinearLayout>

    <!-- No Data Message -->
    <LinearLayout
        android:id="@+id/noDataLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_siren"
            app:tint="@color/gray_300"
            android:alpha="0.5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No Resolved Emergencies"
            android:textSize="16sp"
            android:textColor="@color/gray_500"
            android:fontFamily="@font/inter_medium"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resolved SOS alerts will appear here"
            android:textSize="13sp"
            android:textColor="@color/nav_icon_color"
            android:fontFamily="@font/inter_regular"
            android:layout_marginTop="4dp" />
    </LinearLayout>

    <!-- SOS List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="16dp"
        android:paddingBottom="16dp"
        android:clipToPadding="false"
        android:overScrollMode="never" />

</LinearLayout>
