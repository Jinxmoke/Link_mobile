<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingTop="0dp"
    android:radius="15dp"
    android:paddingBottom="24dp">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Title Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Assign Device"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter__extrabold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="Enter the user's name and contact number below."
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- X Icon -->
        <ImageView
            android:id="@+id/btnClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Close"
            android:layout_marginTop="-15dp"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Content Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:layout_marginTop="-5dp"
        android:paddingEnd="24dp">

        <!-- User Name Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Name"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/gray_900"
                android:fontFamily="@font/inter_medium" />

            <EditText
                android:id="@+id/inputUserName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter full name"
                android:inputType="text"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="15sp"
                android:textColor="@color/gray_900"
                android:textColorHint="@color/nav_icon_color"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/input_field_bg"
                android:elevation="0dp"
                android:lineSpacingMultiplier="1.5" />
        </LinearLayout>

        <!-- Contact Number Input -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact Number"
                android:textSize="13sp"
                android:layout_marginBottom="8dp"
                android:textColor="@color/gray_900"
                android:fontFamily="@font/inter_medium" />

            <EditText
                android:id="@+id/inputContactNumber"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Enter phone number"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:textSize="15sp"
                android:textColor="@color/gray_900"
                android:textColorHint="@color/nav_icon_color"
                android:fontFamily="@font/inter_regular"
                android:background="@drawable/input_field_bg"
                android:elevation="0dp"
                android:lineSpacingMultiplier="1.5" />
        </LinearLayout>

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:spacing="12dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:layout_marginEnd="12dp"
                android:text="Cancel"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:fontFamily="@font/inter_medium"
                android:letterSpacing="0.01"
                android:background="@drawable/input_field_bg"
                android:stateListAnimator="@null"
                android:elevation="0dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirm"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Save Changes"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_medium"
                android:letterSpacing="0.01"
                android:background="@drawable/orange_rounded_button"
                android:stateListAnimator="@null"
                android:elevation="0dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
