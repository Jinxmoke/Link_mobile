<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginHorizontal="4dp"
    app:cardCornerRadius="12dp"
    android:elevation="0dp"
    app:cardBackgroundColor="#FFFFFF"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="0dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Icon -->
            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="12dp"
                android:background="@drawable/circle_background"
                android:gravity="center"
                android:elevation="0dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_siren"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Serial Number -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Serial Number"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="#94A3B8"
                    android:textSize="11sp"
                    android:letterSpacing="-0.01"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/tvSerialNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HELTEC-V4"
                    android:fontFamily="@font/inter__extrabold"
                    android:textColor="#0F172A"
                    android:textSize="14sp"
                    android:letterSpacing="-0.01" />
            </LinearLayout>

            <!-- Resolved Badge -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RESOLVED"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/inter__extrabold"
                android:textSize="10sp"
                android:letterSpacing="0.05"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:background="@drawable/successful_badge"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F1F5F9"
            android:layout_marginBottom="12dp" />

        <!-- Two Column Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Left Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingEnd="8dp">

                <!-- Customer -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Name"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="2px" />

                    <TextView
                        android:id="@+id/tvCustomerName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Michael"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#0F172A"
                        android:textSize="12sp"
                        android:letterSpacing="-0.01" />
                </LinearLayout>

                <!-- Location -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="2px" />

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120.21298, 14.92839"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#0F172A"
                        android:textSize="12sp"
                        android:letterSpacing="-0.01" />
                </LinearLayout>
            </LinearLayout>

            <!-- Right Column -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <!-- Alert Time -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resolved At"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="2px" />

                    <TextView
                        android:id="@+id/tvDateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1/11/2026 12:00 PM"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#0F172A"
                        android:textSize="12sp"
                        android:letterSpacing="-0.01" />
                </LinearLayout>

                <!-- Resolved By -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Resolved by"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="#94A3B8"
                        android:textSize="11sp"
                        android:letterSpacing="-0.01"
                        android:layout_marginBottom="2px" />

                    <TextView
                        android:id="@+id/tvResolvedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Michael"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="#0F172A"
                        android:textSize="12sp"
                        android:letterSpacing="-0.01" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
