<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F7FA"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header with Image and Gradient Overlay -->
        <RelativeLayout
            android:id="@+id/headerContainer"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <ImageView
                android:id="@+id/headerImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dashboard" />

            <!-- Gradient Overlay for better text readability -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


            <!-- Title Section -->
            <LinearLayout
                android:id="@+id/titleSection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="45dp">

                <TextView
                    android:id="@+id/titleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mission Dashboard"
                    android:textSize="35sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:shadowColor="#000000"
                    />

                <TextView
                    android:id="@+id/subtitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Emergency Response Rescuer"
                    android:textSize="17sp"
                    android:textColor="#E0E0E0"
                    android:layout_marginTop="4dp"
                    android:shadowColor="#000000" />
            </LinearLayout>
        </RelativeLayout>

        <!-- Stats Cards Section -->
        <LinearLayout
            android:id="@+id/cardSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center"
            android:layout_below="@id/headerContainer"
            android:layout_marginTop="-190dp">

            <!-- Found Users Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/modern_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_person_found"
                        android:contentDescription="Found users icon"
                        app:tint="#3B82F6" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_trending_up"
                        android:contentDescription="Trend icon"
                        app:tint="#10B981" />
                </LinearLayout>

                <TextView
                    android:id="@+id/card1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Found Users"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card1Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+2 this week"
                    android:textSize="11sp"
                    android:textColor="#10B981"
                    android:textStyle="bold" />
            </LinearLayout>

            <!-- Successful Rescues Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/modern_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:contentDescription="Success icon"
                        app:tint="#10B981" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_trending_up"
                        android:contentDescription="Trend icon"
                        app:tint="#10B981" />
                </LinearLayout>

                <TextView
                    android:id="@+id/card2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Successful Rescue"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#6B7280"
                    android:letterSpacing="0.02"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/card2Number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="05"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:textColor="#1F2937"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+1 this week"
                    android:textSize="11sp"
                    android:textColor="#10B981"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <!-- Additional Stats Row -->
        <LinearLayout
            android:id="@+id/additionalStatsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:gravity="center"
            android:layout_below="@id/cardSection"
            android:layout_marginTop="8dp">

            <!-- Active Missions Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/accent_card_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mission"
                    android:contentDescription="Mission icon"
                    app:tint="#EF4444" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Active Missions"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </LinearLayout>

            <!-- Response Time Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/accent_card_bg"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_timer"
                    android:contentDescription="Timer icon"
                    app:tint="#F59E0B" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="8m"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Avg Response"
                        android:textSize="11sp"
                        android:textColor="#6B7280" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Main Content Section -->
        <LinearLayout
            android:id="@+id/contentSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_below="@id/additionalStatsSection"
            android:layout_marginTop="8dp">

            <!-- Quick Actions Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/modern_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_flash"
                        android:contentDescription="Quick actions icon"
                        app:tint="#EF4444" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quick Actions"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <!-- SOS Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/action_button_bg"
                        android:layout_marginEnd="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_settings"
                            android:contentDescription="Settings"
                            app:tint="#EF4444" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Settings"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <!-- Map Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/action_button_bg"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_map"
                            android:contentDescription="Map icon"
                            app:tint="#3B82F6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View Map"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center" />
                    </LinearLayout>

                    <!-- Report Button -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="12dp"
                        android:background="@drawable/action_button_bg"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:src="@drawable/ic_report"
                            android:contentDescription="Report icon"
                            app:tint="#10B981" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="File Report"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:textColor="#1F2937"
                            android:layout_marginTop="8dp"
                            android:textAlignment="center" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>



            <!-- Team Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/team_card_bg"
                android:orientation="vertical"
                android:padding="20dp"
                android:elevation="2dp"
                android:layout_marginBottom="100dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_team"
                        android:contentDescription="Team icon"
                        app:tint="#2563EB" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Team Information"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#1F2937"
                        android:layout_marginStart="12dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E5E7EB"
                    android:layout_marginBottom="16dp" />

                <!-- Team Name Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Team Name:"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alpha Rescue Team"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Team Leader Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Team Leader:"
                        android:textSize="14sp"
                        android:textColor="#6B7280"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="John Smith"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:gravity="end" />
                </LinearLayout>

                <!-- Team Members Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Team Members:"
                    android:textSize="14sp"
                    android:textColor="#6B7280"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp" />

                <!-- Member 1 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/member_item_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_avatar"
                        android:contentDescription="Member avatar"
                        app:tint="#2563EB" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sarah Johnson"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />


                </LinearLayout>

                <!-- Member 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/member_item_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_avatar"
                        android:contentDescription="Member avatar"
                        app:tint="#2563EB" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mike Chen"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <!-- Member 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/member_item_bg"
                    android:padding="10dp"
                    android:layout_marginBottom="8dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_avatar"
                        android:contentDescription="Member avatar" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Emma Davis"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>

                <!-- Member 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/member_item_bg"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_avatar"
                        android:contentDescription="Member avatar" app:tint="#2563EB" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Alex Rodriguez"
                        android:textSize="14sp"
                        android:textColor="#1F2937"
                        android:textStyle="bold"
                        android:layout_marginStart="12dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>
