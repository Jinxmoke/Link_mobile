<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <FrameLayout
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/back"
                app:tint="@color/gray_900" />

        </FrameLayout>

        <!-- Title Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Change Password"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:fontFamily="@font/inter__extrabold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:text="Update your account password securely"
                android:textColor="@color/text_secondary"
                android:textSize="13sp" />
        </LinearLayout>

        <!-- Empty view for balance -->
        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Content Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never"
        android:paddingStart="20dp"
        android:paddingEnd="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="24dp">

            <!-- Security Info Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/background_orange"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="12dp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/primary_orange_dark" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:lineSpacingMultiplier="1.5"
                    android:text="Use a strong password with at least 8 characters, including uppercase, lowercase, and numbers."
                    android:textColor="@color/primary_orange_dark"
                    android:textSize="12sp"
                    android:fontFamily="@font/inter_regular" />

            </LinearLayout>

            <!-- Current Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Current Password"
                android:textSize="13sp"
                android:textColor="@color/gray_900"
                android:fontFamily="@font/inter_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/input_field_bg">

                <EditText
                    android:id="@+id/etOldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter current password"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="56dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/nav_icon_color"
                    android:fontFamily="@font/inter_regular"
                    android:background="@null"
                    android:elevation="0dp" />

                <ImageView
                    android:id="@+id/btnToggleOldPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="Toggle password visibility"
                    app:tint="@color/gray_500"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </RelativeLayout>

            <!-- New Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="New Password"
                android:textSize="13sp"
                android:textColor="@color/gray_900"
                android:fontFamily="@font/inter_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_field_bg">

                <EditText
                    android:id="@+id/etNewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter new password"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="56dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/nav_icon_color"
                    android:fontFamily="@font/inter_regular"
                    android:background="@null"
                    android:elevation="0dp" />

                <ImageView
                    android:id="@+id/btnToggleNewPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="Toggle password visibility"
                    app:tint="@color/gray_500"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </RelativeLayout>

            <!-- Password Strength Indicator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginBottom="6dp"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/strengthBar1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_300"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:id="@+id/strengthBar2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_300"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:id="@+id/strengthBar3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_300"
                        android:layout_marginEnd="2dp" />

                    <View
                        android:id="@+id/strengthBar4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/gray_300" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvPasswordStrength"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/gray_500"
                    android:fontFamily="@font/inter_regular" />

            </LinearLayout>

            <!-- Confirm New Password -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="Confirm New Password"
                android:textSize="13sp"
                android:textColor="@color/gray_900"
                android:fontFamily="@font/inter_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/input_field_bg">

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Confirm new password"
                    android:inputType="textPassword"
                    android:paddingStart="16dp"
                    android:paddingEnd="56dp"
                    android:textSize="15sp"
                    android:textColor="@color/gray_900"
                    android:textColorHint="@color/nav_icon_color"
                    android:fontFamily="@font/inter_regular"
                    android:background="@null"
                    android:elevation="0dp" />

                <ImageView
                    android:id="@+id/btnToggleConfirmPassword"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_eye"
                    android:contentDescription="Toggle password visibility"
                    app:tint="@color/gray_500"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </RelativeLayout>

            <!-- Match Indicator -->
            <TextView
                android:id="@+id/tvPasswordMatch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:fontFamily="@font/inter_regular"
                android:layout_marginBottom="32dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

    <!-- Button Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="24dp"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSavePassword"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Change Password"
            android:textSize="14sp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_medium"
            android:letterSpacing="0.01"
            android:background="@drawable/orange_rounded_button"
            android:stateListAnimator="@null"
            android:elevation="0dp" />

    </LinearLayout>

</LinearLayout>
